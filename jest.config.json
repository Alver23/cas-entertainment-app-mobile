{
  "preset": "react-native",
  "roots": ["<rootDir>/src/"],
  "testMatch": ["<rootDir>/src/**/+(*.)+(spec).+(tsx|ts)"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*-interface.ts",
    "!src/**/messages/index.ts",
    "!src/**/polyfills/*.{js,jsx,ts,tsx}",
    "!src/**/screens/app/index.ts",
    "!src/**/screens/auth/index.ts",
    "!src/**/store/actions/index.ts",
    "!src/**/models/*.ts",
    "!src/models/*.ts",
    "!src/store/index.ts"
  ],
  "coverageDirectory": "coverage",
  "setupFiles": ["<rootDir>/jest/setup.js", "<rootDir>/node_modules/react-native-gesture-handler/jestSetup.js"],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "coveragePathIgnorePatterns": [
    "src/core"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|@react-native-community|react-native-elements|@react-navigation)"
  ]
}
